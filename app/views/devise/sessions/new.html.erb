<head>
  <%= stylesheet_link_tag "new" %>
</head>
<body>
<div class="container">
    <section id="content">
        <form action="/users/sign_in" method="post">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <h1>Login Form</h1>
            <div>
                <input type="text" placeholder="Email ID" required="" name="user[email]" />
            </div>
            <div>
                <input type="password" placeholder="Password" required="" name="user[password]" />
            </div>
            <div>
                <input type="submit" value="Log in" />
                New User?
                <a href="/users/sign_up"><input type="button" value="Sign Up"></a>
            </div>
        </form><!-- form -->
        
    </section><!-- content -->
</div><!-- container -->
</body>
</html>
