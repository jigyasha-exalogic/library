<%= form_with(model: history, local: true) do |form| %>
  <% if history.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(history.errors.count, "error") %> prohibited this history from being saved:</h2>

      <ul>
        <% history.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.hidden_field :user_id, :value => (params[:id]) %>
  </div>

  <div class="field">
    <%= form.label :book_id %>
    <%= form.select :book_id, @coll %>
  </div>

  <div class="field">
    <%= form.label :due_date %>
    <%= form.date_field :due_date, :min => (Date.today) %>
  </div>

  <div class="actions">
    <%= form.submit "Issue Book" %>
  </div>
<% end %>
