<p id="notice"><%= notice %></p>

<h1><%= User.find(params[:id]).email %></h1><br>

<table>
  <thead>
    <tr>
      <th>Book Name</th>
      <th>Due date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @histories.each do |history| %>
      <tr>
        <td><%= Book.find(history.book_id).title %></td>
        <td><%= history.due_date %></td>
        <td><%= link_to 'Return', history, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
